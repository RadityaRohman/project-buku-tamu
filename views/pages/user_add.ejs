<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include('../partials/head') %>
	</head>
	<body>
		<div class="container">
			<!-- Navbar -->
			<%- include('../partials/navbar') %>
			<!-- Navbar end -->

			<div class="register-form">
				<h2><%= title %></h2>
				<form action="/save" method="post">
					<div class="form-group">
						<label for="nama">Nama :</label>
						<input
							type="text"
							class="form-control"
							id="nama"
							placeholder="Masukan nama"
							name="nama"
							required
						/>
					</div>
					<div class="form-group">
						<label for="kontak">No Telepon : </label>
						<input
							type="text"
							class="form-control"
							id="kontak"
							placeholder="Masukan no. telepon (ex: 08123... )"
							name="kontak"
							required
						/>
					</div>
					<div class="form-group">
						<label for="waktu">Waktu : </label>
						<input
							type="date"
							class="form-control"
							id="waktu"
							name="waktu"
							required
						/>
					</div>
					<div class="form-group">
						<label for="waktu">Abjad Meja : </label>
						<input
							type="text"
							class="form-control"
							id="abjad_meja"
							placeholder="Pilih Abjad Meja Antara A - E"
							name="abjad_meja"
							required
						/>
					</div>
					<div class="form-group">
						<label for="waktu">Nomor Meja : </label>
						<input
							type="text"
							class="form-control"
							id="nomor_meja"
							placeholder="Pilih Nomor Meja Antar 1 - 20"
							name="nomor_meja"
							required
						/>
					</div>
					<button type="submit" class="btn btn-primary my-3">Submit</button>
				</form>
			</div>
		</div>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
	</body>
</html>
